<h1><%= @chef.name %></h1>


<h2>Unique Ingredients Used</h2>
<ul>
  <% @chef.unique_ingredients.each do |ingredient_name| %>
    <li><%= ingredient_name %></li>
  <% end %>
</ul>

<h2>Top 3 Popular Ingredients</h2>
<ul>
  <% @chef.most_popular_ingredients.each do |ingredient| %>
    <li><%= ingredient.name %> (Dishes: <%= ingredient.dishes.count %>)</li>
  <% end %>
</ul>

<%= link_to "View All Ingredients Used", ingredients_index_chef_path(@chef) %>
